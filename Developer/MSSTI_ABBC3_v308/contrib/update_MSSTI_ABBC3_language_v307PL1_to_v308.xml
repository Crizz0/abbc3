<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		
		<title lang="en"><![CDATA[Advanced BBCode Box 3 (aka ABBC3) - Update : This file describes the changes in language files from version 3.0.7 to 3.0.7-PL1]]></title>
		
		<description lang="en"><![CDATA[This file describes the changes in language files from version 3.0.7 to 3.0.7-PL1]]></description>

		<author-notes lang="en"><![CDATA[See the main install file for any additional information about the MOD.]]></author-notes>
	
		<author-group>
			<author>
				<realname><![CDATA[Gabriel]]></realname>
				<username><![CDATA[leviatan21]]></username>
				<homepage><![CDATA[http://www.mssti.com/phpbb3/]]></homepage>
				<email><![CDATA[info@mssti.com]]></email>
				<contributions-group>
					<contributions status="current" from="2008-01-10" position="Developer"/>
				</contributions-group>
			</author>

			<author>
				<username><![CDATA[VSE]]></username>
				<contributions-group>
					<contributions status="current" from="2010-03-02" position="Contributor"/>
				</contributions-group>
			</author>
		</author-group>
		
		<mod-version>3.0.8</mod-version>
		
		<installation>
			<level>easy</level>
			<time>600</time>
			<target-version>3.0.8</target-version>
		</installation>

		<link-group>
			<link type="parent" href="../install_ABBC3.xml" lang="en">Code change</link>
		</link-group>
	</header>
	
	<action-group>

		<open src="language/en/mods/abbcode.php">
			<edit>
				<find><![CDATA[	'ABBC3_WEB_VIEW'			=> '[web width=99% height=140]http://www.mssti.com[/web]',]]></find>
				<action type="after-add"><![CDATA[	'ABBC3_WEB_EXPLAIN'			=> '<strong class="error">Note:</strong> allowing other websites to be inserted in posts, can pose a security risk. Use at your own risk, or assign to trusted groups.',]]></action>
			</edit>

			<edit>
				<find><![CDATA[	'ABBC3_GLOW_MOVER'			=> 'Glow text (Only Internet Explorer)',]]></find>
				<action type="replace-with"><![CDATA[	'ABBC3_GLOW_MOVER'			=> 'Glow text',]]></action>
			</edit>

			<edit>
				<find><![CDATA[	'ABBC3_SHADOW_MOVER'		=> 'Shadow text (Only Internet Explorer)',]]></find>
				<action type="replace-with"><![CDATA[	'ABBC3_SHADOW_MOVER'		=> 'Shadow text',]]></action>
			</edit>

			<edit>
				<find><![CDATA[	'ABBC3_DROPSHADOW_MOVER'	=> 'Dropshadow text (Only Internet Explorer)',]]></find>
				<action type="replace-with"><![CDATA[	'ABBC3_DROPSHADOW_MOVER'	=> 'Dropshadow text',]]></action>
			</edit>

			<edit>
				<find><![CDATA[	'ABBC3_BLUR_MOVER'			=> 'Blur text (Only Internet Explorer)',]]></find>
				<action type="replace-with"><![CDATA[	'ABBC3_BLUR_MOVER'			=> 'Blur text',]]></action>
			</edit>

			<edit>
				<find><![CDATA[	'ABBC3_WAVE_MOVER'			=> 'Wave text (Only Internet Explorer)',]]></find>
				<action type="replace-with"><![CDATA[	'ABBC3_WAVE_MOVER'			=> 'Wave text',]]></action>
			</edit>

		</open>

	</action-group>
</mod>
